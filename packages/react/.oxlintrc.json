{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["react", "typescript", "vitest"],
  "categories": {
    "correctness": "off"
  },
  "env": {
    "builtin": true,
    "browser": true
  },
  "jsPlugins": ["eslint-plugin-react-refresh"],
  "overrides": [
    {
      "files": ["**/*.{js,jsx,ts,tsx}"],
      "rules": {
        "no-unused-vars": [
          "error",
          {
            "vars": "all",
            "varsIgnorePattern": "^_",
            "args": "after-used",
            "argsIgnorePattern": "^_"
          }
        ],
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "react/display-name": ["error", {}]
      },
      "plugins": ["react", "typescript"]
    },
    {
      "files": ["**/*.{js,jsx,ts,tsx}"],
      "rules": {
        "no-console": [
          "error",
          {
            "allow": ["warn", "error", "assert"]
          }
        ]
      }
    },
    {
      "files": [
        "**/*.stories.*",
        "**/__stories__/**",
        "**/*.test.*",
        "**/__tests__/**"
      ],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["**/*.{js,jsx,ts,tsx}"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "paths": [
              {
                "name": "@/f0",
                "message": "Barrel imports are not allowed. Use specific component imports instead."
              },
              {
                "name": "@/experimental",
                "message": "Imports from @/experimental root are not allowed. Import the component directly instead."
              }
            ],
            "patterns": [
              {
                "group": [
                  "*f0",
                  "*f0.ts",
                  "*/f0",
                  "**/f0",
                  "**/f0.ts",
                  "*exports",
                  "*exports.ts",
                  "*/exports",
                  "**/exports",
                  "**/exports.ts",
                  "@/*/exports",
                  "@/**/exports",
                  "!@/lib/providers/f0"
                ],
                "message": "Barrel imports are not allowed. Use specific component imports instead. [Rule: 1]"
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "**/exports.ts",
        "**/exports.tsx",
        "**/f0.ts",
        "**/experimental.ts",
        "**/ai.ts"
      ],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "paths": [
              {
                "name": "@/f0",
                "message": "Barrel imports are not allowed. Use specific component imports instead.  [Rule: 2]"
              },
              {
                "name": "@/experimental",
                "message": "Imports from @/experimental root are not allowed. Import the component directly instead. [Rule: 3]"
              }
            ],
            "patterns": [
              {
                "group": [
                  "f0",
                  "*f0.ts",
                  "*/f0",
                  "**/f0",
                  "**/f0.ts",
                  "!@/lib/providers/f0"
                ],
                "message": "Barrel imports are not allowed. Use specific component imports instead. [Rule: 4]"
              }
            ]
          }
        ]
      }
    }
  ]
}
