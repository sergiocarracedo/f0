{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "checkJs": false,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "types": ["vite/client", "@testing-library/jest-dom", "vitest/globals"],
    "files": ["vitest.shims.d.ts"],
    "typeRoots": ["./node_modules/@types", "."],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    }
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/__tests__/**/*.ts",
    "src/**/__tests__/**/*.tsx",
    "vite/vitest.setup.ts",
    "vitest.shims.d.ts"
  ]
}
